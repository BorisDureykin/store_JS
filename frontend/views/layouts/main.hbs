        <span >Calculator</span>
        </button>

            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar1" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
          <span >Cart</span>
        </button>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Category</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                  {{#each categoryList}}
                      <li class="nav-item">
                          <nav class="navbar  border-bottom border-body" data-bs-theme="licht">
                              <div class="container-fluid">
                                  <a class="nav-link active" aria-current="page" href="/category/{{this.id}}">{{this.name}}</a>
                              </div>
                          </nav>
                      </li>
                  {{/each}}
              </li>
            </ul>
          </div>
            </div>
          <div class="container-fluid">

            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar1" aria-labelledby="offcanvasNavbarLabel">
              <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">cart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
              </div>
              <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                  <li class="nav-item">
                      <div>
                          <ul class="list-group list-group-flush">
                           <div class="btn-group me-5">
                               <a href="/cart" class="btn btn-outline-dark">Place an order</a>
                           </div>
                          </ul>
                          <ul class="list-group list-group-flush">
                              Общее количество товаров: {{totalItemCount}}
                          </ul>
                           <ul class="list-group list-group-flush">
                               Сумма товаров в корзине: {{totalCartPrice}} ₽
                           </ul>
                    </div>
                      {{#each cart}}
                           {{#if this.promotion}}
                                <div class="spinner-grow" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                             {{else}}
                                <div class="spinner-grow text-light" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                             {{/if}}
                              <nav class="navbar  border-bottom border-body" data-bs-theme="licht">
                                  <li class="nav-item">
                                    <div>
                                        <ul class="list-group list-group-flush">
                                            <h5 class="card-title">{{this.name}}</h5>
                                        </ul>
        <!--                            <p class="card-text">{{this.description}}</p>-->
                                        <ul class="list-group list-group-flush">
                                            <h6 class="list-group-item">Price: {{this.price}} ₽</h6>
                                        </ul>
                                    </div>
                                  </li>
                                        <div class="card-body">
                                            <ul  >
                                            <div class="btn-group me-5">
                                                <a href="product/{{this.id}}" class="btn btn-outline-dark">More...</a>
                                            </div>
                                            <div class="btn-group">
                                            <form action="/cart/{{this.cart_id}}" method="post" >
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="id" value="{{this.cart_id}}">
                                                <button  type="submit" class="btn btn-outline-dark">Delete</button>
                                            </form>
                                        </div>
                                    </ul>
                                  </div>
                              </nav>
                      {{/each}}
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Calculator</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                                <main class="mainCalculator">
                                    <div class="calculator">
                                        <div>
                                            <div class="titleCalculator">
                                                CITIZEN
                                            </div>
                                        </div>
                                        <div class="input" id="input"></div>
                                            <div class="buttons">
                                            <div class="operators">
                                            <div>+</div>
                                            <div>-</div>
                                            <div>&times;</div>
                                            <div>&divide;</div>
                                         </div>
                                         <div class="operators">
                                             <div id="resultPercent">%</div>
                                             <div id="resultRadic">&radic;</div>
                                             <div id="resultExponent2">&sup2;</div>
                                              <div id="resultExponent3">&sup3;</div>
                                        </div>

                                     <div class="leftPanel">
                                          <div class="numbers">
                                            <div>1</div>
                                            <div>2</div>
                                            <div>3</div>
                                          </div>
                                          <div class="numbers">
                                            <div>4</div>
                                            <div>5</div>
                                            <div>6</div>
                                          </div>
                                          <div class="numbers">
                                            <div>7</div>
                                            <div>8</div>
                                            <div>9</div>

                                          </div>
                                          <div class="numbers">
                                            <div>0</div>
                                              <div>00</div>
                                            <div>.</div>

                                          </div>
                                     </div>
                                 <div class="rightPanel">
                                    <div class="clear">
                                        <div id="sign">&plusmn;</div>
                                     </div>
                                     <div class="clear">
                                         <div id="clear1">&larr;</div>
                                     </div>
                                      <div class="clear">
                                        <div id="clear">C</div>
                                     </div>
                                     <div class="result">
                                        <div id="result">=</div>
                                     </div>
                                 </div>
                             </div>
                            </div>
                            <div class="footer">
                                     &copy;Boris_Dureykin
                            </div>

                        </main>
                             </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

              </div>
            </div>
          </div>
        </div>
        </div>
    </nav>
