<div class="text-center">
<h1>Making an order</h1>
</div>

    <ul class="nav" >
    {{#each cart}}
        <div class="card" style="width: 18rem; margin: auto">
                  <img src="{{this.img}}" class="card-img-top" alt="No image">
                 {{#if this.promotion}}
                    <div class="spinner-grow" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                 {{else}}
                    <div class="spinner-grow text-light" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                 {{/if}}
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: {{this.price}} â‚½</li>
          </ul>
          <div class="card-body">
            <ul  >
                <div class="btn-group me-5">
                    <a href="../product/{{this.id}}" class="btn btn-outline-dark">More...</a>
                </div>
                <div class="btn-group">
                    <form action="/cart/{{this.cart_id}}" method="post" >
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="id" value="{{this.cart_id}}">
                        <button  type="submit" class="btn btn-outline-dark">Delete</button>
                    </form>
                </div>

                </ul>
          </div>
        </div>
    {{/each}}
</ul>


