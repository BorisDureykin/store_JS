
<p class="d-inline-flex gap-2">

 <a class="btn btn-outline-dark" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">
          Edit
      </a>
<h1>Product {{product.name}} Information</h1>
</p>

    <div class="row">
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample1">
      <div class="card card-body" style="width: 30rem;">
          <form class="column g-3" action="/create-product/{{product.id}}" method="post">
              <input type="hidden" name="_method" value="PUT">
              <input type="hidden" name="id" value="{{product.id}}">

                <div class="col-md-15">
                    <label for="validationDefault01" class="form-label">Product name</label>
                    <input type="text" class="form-control" id="validationDefault01" value="{{product.name}}" name="name" required>
                </div>
                <div class="col-md-15">
                    <label for="validationDefault02" class="form-label">Product Description</label>
                    <input type="text" class="form-control" name="description" id="validationDefault02" value="{{product.description}}" required>
                </div>
              <div class="col-md-3">
                <label for="validationDefault03" class="form-label">Price</label>
                <input type="number" min="0" step="0.01" class="form-control" name="price" value="{{product.price}}" id="validationDefault03" required>
              </div>
              <div class="col-md-3">
                <label class="form-label" >Category</label>
                    <select class="form-select form-select-m" name="category_id" aria-label="Small select example" >
                        <option selected></option>
                          {{#each categoryList}}
                          <option value="{{this.id}}"  > {{this.name}}</option>
                          {{/each}}
                    </select>
              </div>
              <div class="col-12">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="true" name="promotion" >
                    the product participating in the promotion
                  </label>
                </div>
              </div>
              <div class="col-12">
                  <button  type="submit" class="btn btn-outline-dark">Save</button>
              </div>
        </form>
        <form action="/create-product/{{product.id}}" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="id" value="{{product.id}}">
            <button type="submit" class="btn btn-outline-dark">Remove</button>
        </form>
      </div>
    </div>
  </div>

<div >
     <div class="card" style="width: 18rem;">
          <img src="{{product.img}}" class="card-img-top" alt="No image">
         {{#if product.promotion}}
            <div class="spinner-grow" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
         {{else}}
            <div class="spinner-grow text-light" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
         {{/if}}
          <div class="card-body">
            <h5 class="card-title">{{product.name}}</h5>
            <p class="card-text">{{product.description}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: {{product.price}} â‚½</li>
          </ul>
          <div class="card-body">
            <ul  >
                <form action="/cart/{{product.id}}" method="post">
                    <input type="hidden" name="id" value="{{product.id}}">
                    <input type="hidden" name="_method" value="POST">
                    <button type="submit" class="btn btn-outline-dark">Add to Cart</button>
                </form>
            </ul>
          </div>
        </div>
    </div>
</div>