
<p class="d-inline-flex gap-2">
      <a class="btn btn-outline-dark" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">
          Edit
      </a>
     <h1>
        {{category.name}}
        <small class="text-body-secondary">
            {{category.productCount}}
        </small>
    </h1>
</p>
<div class="row">
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample1">
      <div class="card card-body">
        <form action="/create-category/{{category.id}}" method="post">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="id" value="{{category.id}}">
    <input type="text" name="name" value="{{category.name}}">
    <button type="submit" class="btn btn-outline-dark">Save</button>
</form>

<form action="/create-category/{{category.id}}" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="id" value="{{category.id}}">
    <button type="submit" class="btn btn-outline-dark">Remove</button>
</form>
      </div>
    </div>
  </div>

<div class="d-flex flex-row">


{{#each productList}}
    <div class="card" style="width: 18rem;">
          <img src="{{this.img}}" class="card-img-top" alt="No image">
         {{#if this.promotion}}
            <div class="spinner-grow" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
         {{else}}
            <div class="spinner-grow text-light" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
         {{/if}}
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: {{this.price}} â‚½</li>
          </ul>
          <div class="card-body">
            <ul  >
                <div class="btn-group me-5">
                    <a href="../product/{{this.id}}" class="btn btn-outline-dark">More...</a>
                </div>

                </ul>
          </div>
        </div>
{{/each}}
</div>

